<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">
    <transitionSet>
        <targets>
            <target android:targetId="@id/thumbnail" />
            <target android:targetId="@id/photo" />
        </targets>
        <changeBounds>
            <arcMotion android:maximumAngle="50" />
        </changeBounds>
        <changeTransform />
        <changeClipBounds />
        <changeImageTransform />
        <recolor />
    </transitionSet>
    <transitionSet>
        <targets>
            <target android:targetId="@id/article_title" />
            <target android:targetId="@id/detail_article_title" />
            <target android:targetId="@id/article_subtitle" />
            <target android:targetId="@id/detail_article_byline" />
        </targets>
        <transition class="com.example.xyzreader.transition.TextResize" />
        <changeBounds />
    </transitionSet>
    <recolor>
        <targets>
            <target android:targetId="@android:id/statusBarBackground" />
            <target android:targetId="@android:id/navigationBarBackground" />
        </targets>
    </recolor>
</transitionSet>